<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_inverse">

    <!-- Logo and App Name -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="50dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/suprajit_logo_white" />

        <TextView
            android:id="@+id/supra_telet"
            android:layout_width="wrap_content"
            android:layout_height="33sp"
            android:layout_marginStart="16dp"
            android:text="@string/supra_telet"
            android:fontFamily="@font/roboto_bold"
            android:textAppearance="@style/supra_telet"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_section"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:background="@drawable/otp_inner_gradient"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/create_acco"
            android:layout_width="148dp"
            android:layout_height="27dp"
            android:layout_marginStart="36dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="top"
            android:text="@string/create_account"
            android:textAppearance="@style/create_account" />

        <TextView
            android:id="@+id/intro"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="top"
            android:text="@string/description"
            android:textAppearance="@style/description" />

        <!-- NAME FIELD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_input_layout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="50dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Name"
            android:textColorHint="@color/hint"
            app:boxBackgroundMode="none"
            android:background="@drawable/edittext_bkg"
            app:boxCornerRadiusTopStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxStrokeColor="@color/main_colour"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@null"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mobile number FIELD -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittext_bkg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countryCodePicker"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:ccp_showFlag="false"
                app:ccp_autoDetectCountry="true"
                app:ccp_defaultNameCode="IN"
                app:ccp_showNameCode="false"
                app:ccp_contentColor="@color/white"
                app:ccp_textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/hint" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_input_layout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Mobile Number"
                android:textColorHint="@color/hint"
                app:boxBackgroundMode="none"
                app:boxStrokeColor="@color/main_colour"
                app:boxCornerRadiusTopStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusBottomEnd="15dp"
                app:hintAnimationEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:inputType="phone"
                    android:paddingStart="1dp"
                    android:paddingEnd="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- email FIELD -->

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bkg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/hint"
                app:boxBackgroundMode="none"
                app:hintAnimationEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@null"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/verify_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="12dp"
                android:text="Verify"
                android:textColor="@color/hint"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bkg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dob_input_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="DOB (dd/mm/yy)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/hint"
                app:boxBackgroundMode="none"
                app:hintAnimationEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dob_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType=""
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:background="@null"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/calendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/flag_transparent"
                android:paddingStart="12dp"
                android:src="@drawable/calendar"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verify_button"
            android:layout_width="349dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background_halfwhite"
            android:clickable="true"
            android:focusable="true"
            android:text="Verify"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/verify_button_clickable"
            android:layout_width="349dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_background_white"
            android:clickable="true"
            android:focusable="true"
            android:text="Verify"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/help"
            android:layout_width="237dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:text="@string/help"
            android:textAppearance="@style/help" />

        <TextView
            android:id="@+id/resend_otp"
            android:layout_width="159dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:text="@string/resend_otp"
            android:textAppearance="@style/resend_otp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
