<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <gradient
                android:angle="270"
                android:startColor="#0DFAEE"
            android:endColor="#08948D" />
            <size
                android:width="37dp"
                android:height="37dp" />
            <stroke
                android:width="4dp"
                android:color="#BEFAEC" />
        </shape>
    </item>

    <!-- Unchecked State -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#FFFFFF" />
            <size
                android:width="37dp"
                android:height="37dp" />
            <stroke
                android:width="4dp"
                android:color="#8E8E8E" />
        </shape>
    </item>

</selector>
