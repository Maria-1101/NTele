<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#C7FFFFFF"> <!-- Ripple effect color -->

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Use white or shape to match button bounds -->
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80D9D9D9" /> <!-- Button background color -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</ripple>
